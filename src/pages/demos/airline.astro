---
import '../../css/ai-demo.css'
import BaseHead from '../../components/BaseHead.astro'

import PaperPlane from '../../components/ai-demo/PaperPlane.astro'
import Attachment from '../../components/ai-demo/Attachment.astro'
import Photo from '../../components/ai-demo/Photo.astro'
import SwitchCamera from '../../components/ai-demo/SwitchCamera.astro'

import { Image } from 'astro:assets';
import Map from '../../assets/demos/map.jpg';
---

<!doctype html>
<html lang="en">
	<BaseHead 
	title="Airline AI Demo - psAI Consulting"/>

    <head>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap" rel="stylesheet">
    </head>

	<body class="demo">
        <!-- welcome, checkin_start, checkin_output -->
        <main class="welcome">
            <div class="context_menu">
                <div class="menu">
                    <div class="item">
